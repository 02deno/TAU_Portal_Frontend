<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/lesson_background">


    <TextView
        android:id="@+id/lessonName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingTop="10dp"
        android:drawableEnd="@drawable/ic_baseline_school_24"
        android:drawableTint="@color/off_white"
        android:paddingRight="10dp"
        android:text="Name of the Lesson"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="12dp"
        android:textColor="@color/off_white"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Time"
        android:textColor="@color/off_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lessonName"
        app:layout_constraintTop_toBottomOf="@+id/lessonName"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Location"
        android:textColor="@color/off_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lessonName"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/lessonName"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Teacher"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/time"
        tools:layout_editor_absoluteX="8dp"
        android:textColor="@color/off_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>